@page
@model ManoTourism.Areas.Admin.Pages.PageNotFoundModel
@{
    ViewBag.Title = @sharedResource["Page Not Found"];
    ViewBag.pTitle = @sharedResource["Page Not Found"];
    ViewBag.pageTitle = @sharedResource["Page Not Found"];
 
}
<div class="auth-page-wrapper py-5 d-flex justify-content-center align-items-center min-vh-100">

    <!-- auth-page content -->
    <div class="auth-page-content overflow-hidden p-0">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="text-center">
                        <img src="~/assets/images/error400-cover.png" alt="error img" class="img-fluid">
                        <div class="mt-3">
                            <h3 class="text-uppercase">@sharedResource["Sorry, Page not Found"]😭</h3>
                            <p class="text-muted mb-4">@sharedResource["The page you are looking for not available!"]</p>
                        </div>
                    </div>
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end auth-page content -->
</div>