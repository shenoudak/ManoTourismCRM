@page
@model ManoTourism.Areas.Admin.Pages.ManageAboutSection.EditAboutSectionModel
@{
    ViewBag.Title = @sharedResource["Edit About Section"];
    ViewBag.pTitle = @sharedResource["Edit About Section"];
    ViewBag.pageTitle = @sharedResource["Edit About Section"];


}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Edit About Section"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <div class="modal-body">
                                <input asp-for="EAboutSection.AboutSectionId" id="HiddenId" hidden>
                                <input asp-for="EAboutSection.AboutUsImage" id="PicHiddenId" hidden>
                                <input asp-for="EAboutSection.VideoBackground" id="VideoBackgroundId" hidden>
                              
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none" name="file" id="file" type="file"
                                                           accept="image/*">
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere itemImgCla" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["About Us Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EAboutSection.HeaderTLAR" class="form-label">@sharedResource["Header Arabic Title"]</label>

                                            <input type="text" asp-for="EAboutSection.HeaderTLAR" class="form-control" placeholder="@sharedResource["Enter Header English Title"]" required />

                                            <span asp-validation-for="EAboutSection.HeaderTLAR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EAboutSection.HeaderTLEn" class="form-label">@sharedResource["Header English Title"]</label>
                                            <input type="text" asp-for="EAboutSection.HeaderTLEn" class="form-control" placeholder="@sharedResource["Enter Header English Title"]" required />
                                            <span asp-validation-for="EAboutSection.HeaderTLEn" class="text-danger"></span>
                                        </div>
                                    </div>
                 


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EAboutSection.MissionCaptionAr" class="form-label">@sharedResource["Mission Caption Arabic"]</label>
                                            <textarea  asp-for="EAboutSection.MissionCaptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Mission Caption Arabic"]"></textarea>
                                            <span asp-validation-for="EAboutSection.MissionCaptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EAboutSection.MissionCaptionEn" class="form-label">@sharedResource["Mission Caption English"]</label>
                                            <textarea  asp-for="EAboutSection.MissionCaptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter Mission Caption English"]"></textarea>
                                            <span asp-validation-for="EAboutSection.MissionCaptionEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EAboutSection.CustomerFocusCaptionAr" class="form-label">@sharedResource["Customer Focus Caption Arabic"]</label>
                                            <textarea  asp-for="EAboutSection.CustomerFocusCaptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Customer Focus Caption Arabic"]"></textarea>
                                            <span asp-validation-for="EAboutSection.CustomerFocusCaptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EAboutSection.CustomerFocusCaptionEn" class="form-label">@sharedResource["Customer Focus Caption English"]</label>
                                            <textarea  asp-for="EAboutSection.CustomerFocusCaptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter Customer Focus Caption English"]"></textarea>
                                            <span asp-validation-for="EAboutSection.CustomerFocusCaptionEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                 @*   <div class="col-lg-12 form-group">
                                        <label for="formFile" class="form-label">@sharedResource["Edit Video"]</label>
                                        <input class="form-control" accept="video/mp4,video/x-m4v,video/*" name="Editfile" type="file">
                                    </div>*@
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EAboutSection.VideoUrl" class="form-label">@sharedResource["Video URL"]</label>

                                            <input type="url" asp-for="EAboutSection.VideoUrl" class="form-control" placeholder="@sharedResource["Enter Video URL"]" required />

                                            <span asp-validation-for="EAboutSection.VideoUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 form-group">
                                        <label for="formFile" class="form-label">@sharedResource["Video Background"]</label>
                                        <input class="form-control"  name="Editfile" type="file">
                                    </div>









                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Edit"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
