@page
@model ManoTourism.Areas.Admin.Pages.ManageVisaOutUAE.EditVisaModel

@{
    ViewBag.Title = @sharedResource["Edit Visa"];
    ViewBag.pTitle = @sharedResource["Edit Visa"];
    ViewBag.pageTitle = @sharedResource["Visas"];
   

}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Edit Visa"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">
                       
                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form asp-area="CRM" method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <input asp-for="EditVisa.VisaId" id="HiddenId" hidden>
                            <input asp-for="EditVisa.Pic" id="PicHiddenId" hidden>
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Visa Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover itemImgCla" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditVisa.VisaTitleAr" class="form-label">@(sharedResource["Arabic Title"])</label>

                                            <input type="text" asp-for="EditVisa.VisaTitleAr" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                            <span asp-validation-for="EditVisa.VisaTitleAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditVisa.VisaTitleEn" class="form-label">@sharedResource["English Title"]</label>
                                            <input type="text" asp-for="EditVisa.VisaTitleEn" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                            <span asp-validation-for="EditVisa.VisaTitleEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditVisa.OldPricePerPerson" class="form-label">@sharedResource["Old Price Per Person"]</label>
                                            <input type="number" min="1" asp-for="EditVisa.OldPricePerPerson" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Old Price Per Person"]" required />
                                            <span asp-validation-for="EditVisa.OldPricePerPerson" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditVisa.NewPricePerPerson" class="form-label">@sharedResource["New Price Per Person"]</label>
                                            <input type="number" min="1" asp-for="EditVisa.NewPricePerPerson" class="form-control" placeholder="@sharedResource["Enter New Price Per Person"]" required />
                                            <span asp-validation-for="EditVisa.NewPricePerPerson" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-12">
                                        <div>
                                            <label for="EditVisa.DescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                            <textarea id="textareacontent" asp-for="EditVisa.DescriptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Arabic Description"]"></textarea>
                                            <span asp-validation-for="EditVisa.DescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-12">
                                        <div>
                                            <label for="EditVisa.DescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                            <textarea id="textareacontent" asp-for="EditVisa.DescriptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter English Description"]"></textarea>
                                            <span asp-validation-for="EditVisa.DescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <label asp-for="EditVisa.VisaTypeId" for="car-rental-name">@sharedResource["Visa Types"] <small class="text-danger">*</small></label>

                                        <select data-val="true" data-val-required="@sharedResource["Please choose a Visa Type"]" id="visaTypeId" asp-for="EditVisa.VisaTypeId" class="form-select required" aria-label="Default select example" required>
                                            <option selected value="Select Type">@sharedResource["Select Visa Type"]</option>

                                            @{
                                                if (Model.visaTypes != null)
                                                {
                                                    foreach (var item in Model.visaTypes)

                                                    {
                                                        if (Model.BrowserCulture == "en-US")

                                                        {

                                                            <option value="@item.VisaTypeId">@item.VisaTitleEn</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.VisaTypeId">@item.VisaTitleAr</option>

                                                        }
                                                    }
                                                }
                                            }

                                        </select>

                                        <span asp-validation-for="EditVisa.VisaTypeId" class="text-alert"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <label asp-for="EditVisa.CountryId" for="car-rental-name">@sharedResource["Countries"] <small class="text-danger">*</small></label>

                                        <select data-val="true" data-val-required="@sharedResource["Please choose a Country"]" id="countryId" asp-for="EditVisa.CountryId" class="form-select required" aria-label="Default select example" required>
                                            <option selected value="Select Type">@sharedResource["Select Country"]</option>

                                            @{
                                                if (Model.countries != null)
                                                {
                                                    foreach (var item in Model.countries)

                                                    {
                                                        if (Model.BrowserCulture == "en-US")

                                                        {

                                                            <option value="@item.CountryId">@item.CountryTLEN</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.CountryId">@item.CountryTLAR</option>

                                                        }
                                                    }
                                                }
                                            }

                                        </select>

                                        <span asp-validation-for="EditVisa.CountryId" class="text-alert"></span>
                                    </div>
                                   



                                    
                                    
                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="EditVisa.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="EditVisa.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="EditVisa.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" >
                                        <div>
                                            <label for="EditVisa.ValidityInDays" class="form-label">@sharedResource["Validity In Days"]</label>
                                            <input type="number" min="0" asp-for="EditVisa.ValidityInDays" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Validity In Days"]" />
                                            <span asp-validation-for="EditVisa.ValidityInDays" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add Visa"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
