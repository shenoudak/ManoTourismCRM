@page
@model ManoTourism.Areas.Admin.Pages.ManageEstablishCompanies.EditModel
@{
    ViewBag.Title = @sharedResource["Edit"];
    ViewBag.pTitle = @sharedResource["Edit"];
    ViewBag.pageTitle = @sharedResource["Establishing companies"];
   

}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Edit"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">
                       
                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form  method="post" enctype="multipart/form-data" >
                            <input asp-for="EditEstCompany.EstablishingCompanyId" id="HiddenId" hidden>
                            <input asp-for="EditEstCompany.Pic" id="PicHiddenId" hidden>
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover itemImgCla" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditEstCompany.TitleAr" class="form-label">@sharedResource["Arabic Title"])</label>

                                            <input type="text" asp-for="EditEstCompany.TitleAr" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                            <span asp-validation-for="EditEstCompany.TitleAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditEstCompany.TitleEn" class="form-label">@sharedResource["English Title"]</label>
                                            <input type="text" asp-for="EditEstCompany.TitleEn" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                            <span asp-validation-for="EditEstCompany.TitleEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                 
                       
                                   
                                 
                                    
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditEstCompany.DescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                            <textarea id="textareacontent" asp-for="EditEstCompany.DescriptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Arabic Description"]"></textarea>
                                            <span asp-validation-for="EditEstCompany.DescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditEstCompany.DescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                            <textarea id="textareacontent" asp-for="EditEstCompany.DescriptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter English Description"]"></textarea>
                                            <span asp-validation-for="EditEstCompany.DescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                  



                                    
                                    
                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="EditEstCompany.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="EditEstCompany.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="EditEstCompany.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                            
                                   
                                </div>
                               
                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Edit"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
    <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: '.textAreaCl',
            statusbar: false,
            promotion: false,
            branding: false,

        });

       
        window.addEventListener('load', (event) => {
            console.log('page is fully loaded');

            var ProdPic = document.getElementById("PicHiddenId").value;
            document.getElementsByClassName('itemImgCla')[0].src = "/" + ProdPic
        });
    
    </script>

}

