@page
@model ManoTourism.Areas.Admin.Pages.ManageTripProgram.AddProgramDayModel
@{
    ViewBag.Title = @sharedResource["Add Day To Program"];
    ViewBag.pTitle = @sharedResource["Add Day To Program"];
    ViewBag.pageTitle = @sharedResource["Trip Program"];
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Add Day To Program"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div>
                                            <label asp-for="AddDay.DayNumber" class="form-label">@sharedResource["Day Number"]</label>

                                            <input type="text" asp-for="AddDay.DayNumber" class="form-control" placeholder="@sharedResource["Enter Day Number"]" required />

                                            <span asp-validation-for="AddDay.DayNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddDay.HeaderAr" class="form-label">@sharedResource["Day Header Arabic Title"]</label>

                                            <input type="text" asp-for="AddDay.HeaderAr" class="form-control" placeholder="@sharedResource["Enter Day Header Arabic Title"]" required />

                                            <span asp-validation-for="AddDay.HeaderAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddDay.HeaderEn" class="form-label">@sharedResource["Day Header English Title"]</label>
                                            <input type="text" asp-for="AddDay.HeaderEn" class="form-control" placeholder="@sharedResource["Enter Day Header English Title"]" required />
                                            <span asp-validation-for="AddDay.HeaderEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                   


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddDay.DescriptionAr" class="form-label">@sharedResource["Description In Arabic"]</label>
                                            <textarea id="textareacontent" asp-for="AddDay.DescriptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Description In Arabic"]"></textarea>
                                            <span asp-validation-for="AddDay.DescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddDay.DescriptionEn" class="form-label">@sharedResource["Description In English"]</label>
                                            <textarea id="textareacontent" asp-for="AddDay.DescriptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter Description In English"]"></textarea>
                                            <span asp-validation-for="AddDay.DescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>











                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add Day"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
