@page
@model ManoTourism.Areas.Admin.Pages.ManagePublicSlider.EditPublicSliderModel
@{
    ViewBag.Title = @sharedResource["Manage Public Slider"];
    ViewBag.pTitle = @sharedResource["Manage Public Slider"];
    ViewBag.pageTitle = @sharedResource["Manage Public Slider"];
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Edit Public Slider"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />
                        <form method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <input asp-for="EditPublicSlider.PublicSliderId" hidden>
                                    <input asp-for="EditPublicSlider.Background" id="PicHiddenId" hidden>
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none" name="file" id="file" type="file"
                                                           accept="image/*">
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere itemImgCla" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Background"] </h5>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditPublicSlider.HeaderAr" class="form-label">@sharedResource["Header Arabic Title"]</label>

                                            <input type="text" asp-for="EditPublicSlider.HeaderAr" class="form-control" placeholder="@sharedResource["Enter Header Arabic Title"]" required />

                                            <span asp-validation-for="EditPublicSlider.HeaderAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditPublicSlider.HeaderEn" class="form-label">@sharedResource["Header English Title"]</label>

                                            <input type="text" asp-for="EditPublicSlider.HeaderEn" class="form-control" placeholder="@sharedResource["Enter Header English Title"]" required />

                                            <span asp-validation-for="EditPublicSlider.HeaderEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditPublicSlider.CaptionAr" class="form-label">@sharedResource["Caption Arabic Title"]</label>

                                            <textarea  asp-for="EditPublicSlider.CaptionAr" class="form-control" placeholder="@sharedResource["Enter Caption Arabic Title"]" ></textarea>

                                            <span asp-validation-for="EditPublicSlider.CaptionAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditPublicSlider.CaptionEn" class="form-label">@sharedResource["Caption English Title"]</label>

                                            <textarea  asp-for="EditPublicSlider.CaptionEn"  class="form-control" placeholder="@sharedResource["Enter Caption English Title"]"></textarea>

                                            <span asp-validation-for="EditPublicSlider.CaptionEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 pt-5">
                                    <div class="form-check">
                                        <input asp-for="EditPublicSlider.IsImage" class="form-check-input" type="checkbox" id="checkboxId">
                                        <label for="EditPublicSlider.IsImage" class="form-check-label">@sharedResource["Is Active ?"]</label>
                                        <span asp-validation-for="EditPublicSlider.IsImage" class="text-danger"></span>
                                    </div>
                                </div>
                                



                                <!--end row-->
                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Edit Public Slider"]</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
}
<script>
    window.addEventListener('load', (event) => {
        console.log('page is fully loaded');
        console.log(event);
        var ProdPic = document.getElementById("PicHiddenId").value;
        document.getElementsByClassName('itemImgCla')[0].src = "/" + ProdPic

    });
</script>