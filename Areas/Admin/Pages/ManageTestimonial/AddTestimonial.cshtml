@page
@model ManoTourism.Areas.Admin.Pages.ManageTestimonial.AddTestimonialModel

@{
    ViewBag.Title = @sharedResource["Add User Review"];
    ViewBag.pTitle = @sharedResource["Add User Review"];
    ViewBag.pageTitle = @sharedResource["Reviews"];
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Add User Review"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select User Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddTestimonial.TitleAr" class="form-label">@sharedResource["Review Arabic Title"]</label>

                                            <input type="text" asp-for="AddTestimonial.TitleAr" class="form-control" placeholder="@sharedResource["Enter Review Arabic Title"]" required />

                                            <span asp-validation-for="AddTestimonial.TitleAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddTestimonial.TitleEn" class="form-label">@sharedResource["Review English Title"]</label>
                                            <input type="text" asp-for="AddTestimonial.TitleEn" class="form-control" placeholder="@sharedResource["Enter Review English Title"]" required />
                                            <span asp-validation-for="AddTestimonial.TitleEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddTestimonial.NameAr" class="form-label">@sharedResource["Review writer Name In Arabic"]</label>

                                            <input type="text" asp-for="AddTestimonial.NameAr" class="form-control" placeholder="@sharedResource["Enter Review writer Name In Arabic"]" required />

                                            <span asp-validation-for="AddTestimonial.NameAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddTestimonial.NameEn" class="form-label">@sharedResource["Review writer Name In English"]</label>
                                            <input type="text" asp-for="AddTestimonial.NameEn" class="form-control" placeholder="@sharedResource["Enter Review writer Name In English"]" required />
                                            <span asp-validation-for="AddTestimonial.NameEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddTestimonial.DescriptionAr" class="form-label">@sharedResource["Review In Arabic"]</label>
                                            <textarea id="textareacontent" asp-for="AddTestimonial.DescriptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Review In Arabic"]"></textarea>
                                            <span asp-validation-for="AddTestimonial.DescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddTestimonial.DescriptionEn" class="form-label">@sharedResource["Review In English"]</label>
                                            <textarea id="textareacontent" asp-for="AddTestimonial.DescriptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter Review In English"]"></textarea>
                                            <span asp-validation-for="AddTestimonial.DescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddTestimonial.Rating" class="form-label">@sharedResource["Rating"]</label>
                                            <input type="number" min="1" max="5" asp-for="AddTestimonial.Rating" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Old Price Per Person"]" required />
                                            <span asp-validation-for="AddTestimonial.Rating" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="AddTestimonial.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="AddTestimonial.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="AddTestimonial.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                 

                                  

                               






                                   

                                 
                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add User Review"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
