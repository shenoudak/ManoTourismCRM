@page
@model ManoTourism.Areas.Admin.Pages.ManageEmployee.AddEmployeeModel
@{
    ViewBag.Title = @sharedResource["Add Employee"];
    ViewBag.pTitle = @sharedResource["Add Employee"];
    ViewBag.pageTitle = @sharedResource["Employees"];


}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Add Employee"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Employee Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddEmployee.EmployeeName" class="form-label">@sharedResource["Employee Name"]</label>

                                            <input type="text" asp-for="AddEmployee.EmployeeName" class="form-control" placeholder="@sharedResource["Enter Employee Name"]" required />

                                            <span asp-validation-for="AddEmployee.EmployeeName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddEmployee.EmployeePhoneNumber" class="form-label">@sharedResource["Phone Number"]</label>
                                            <input type="text" asp-for="AddEmployee.EmployeePhoneNumber" class="form-control" placeholder="@sharedResource["Enter Phone Number"]" required />
                                            <span asp-validation-for="AddEmployee.EmployeePhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddEmployee.EmployeeEmail" class="form-label">@sharedResource["Employee Email"]</label>
                                            <input type="email" asp-for="AddEmployee.EmployeeEmail" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Employee Email"]" required />
                                            <span asp-validation-for="AddEmployee.EmployeeEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddEmployee.EmployeePassword" class="form-label">@sharedResource["Employee Password"]</label>
                                            <input type="password" asp-for="AddEmployee.EmployeePassword" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Employee Password"]" required />
                                            <span asp-validation-for="AddEmployee.EmployeePassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <fieldset style="padding:15px; border:2px solid #b2b0d1;background:#f6f8ff;">
                                        <legend style="color:#847dd9;"> @sharedResource["Employee Roles"]</legend>
                                        <div class="row">
                                            @foreach (var item in Model.employeeRoles)
                                            {

                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <div class="form-check">
                                                            <input class="form-check-input" name="EmpRoleList" type="checkbox" value="@item.EmployeeRoleId">
                                                            @if (Model.BrowserCulture == "en-US")
                                                            {
                                                                <label class="form-check-label">@item.RoleTitleEn</label>

                                                            }
                                                            else
                                                            {
                                                                <label class="form-check-label">@item.RoleTitleAr</label>

                                                            }
                                                        </div>


                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    </fieldset>







                                    <div class="col-lg-12" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="AddEmployee.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="AddEmployee.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="AddEmployee.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add Employee"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
