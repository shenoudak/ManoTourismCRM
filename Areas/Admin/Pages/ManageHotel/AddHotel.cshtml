@page
@model ManoTourism.Areas.Admin.Pages.ManageHotel.AddHotelModel

@{
    ViewBag.Title = @sharedResource["Add Hotel"];
    ViewBag.pTitle = @sharedResource["Add Hotel"];
    ViewBag.pageTitle = @sharedResource["Hotels"];


}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Add Hotel"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Hotel Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddHotel.HotelTitleAr" class="form-label">@sharedResource["Arabic Title"]</label>

                                            <input type="text" asp-for="AddHotel.HotelTitleAr" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                            <span asp-validation-for="AddHotel.HotelTitleAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddHotel.HotelTitleEn" class="form-label">@sharedResource["English Title"]</label>
                                            <input type="text" asp-for="AddHotel.HotelTitleEn" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                            <span asp-validation-for="AddHotel.HotelTitleEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddHotel.Review" class="form-label">@sharedResource["Evaluation"]</label>
                                            <input type="number" min="1" asp-for="AddHotel.Review" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Hotel Evaluation"]" required />
                                            <span asp-validation-for="AddHotel.Review" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddHotel.ReviewCount" class="form-label">@sharedResource["Review Count"]</label>
                                            <input type="number" min="1" asp-for="AddHotel.ReviewCount" class="form-control" placeholder="@sharedResource["Enter Review Count"]" required />
                                            <span asp-validation-for="AddHotel.ReviewCount" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddHotel.DescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                            <textarea id="textareacontent" asp-for="AddHotel.DescriptionAr" class="form-control textAreaCl" placeholder="@sharedResource["Enter Arabic Description"]"></textarea>
                                            <span asp-validation-for="AddHotel.DescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddHotel.DescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                            <textarea id="textareacontent" asp-for="AddHotel.DescriptionEn" class="form-control textAreaCl" placeholder="@sharedResource["Enter English Description"]"></textarea>
                                            <span asp-validation-for="AddHotel.DescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>






                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddHotel.Location" class="form-label">@sharedResource["Hotel Location"]</label>

                                            <input type="text" asp-for="AddHotel.Location" class="form-control" placeholder="@sharedResource["Enter Hotel Location"]" required />

                                            <span asp-validation-for="AddHotel.Location" class="text-danger"></span>
                                        </div>
                                    </div>

                                  
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddHotel.VideoUrl" class="form-label">@sharedResource["Video URL"]</label>

                                            <input type="url" asp-for="AddHotel.VideoUrl" class="form-control" placeholder="@sharedResource["Enter Video URL"]" required />

                                            <span asp-validation-for="AddHotel.VideoUrl" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6 form-group">
                                        <label for="formFile" class="form-label">@sharedResource["Adding Others Images For Hotel"]</label>
                                        <input class="form-control" multiple name="MorePhoto" id="MorePhoto" type="file">
                                    </div>
                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="AddHotel.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="AddHotel.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="AddHotel.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add Hotel"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
