@page
@model ManoTourism.Areas.Admin.Pages.ManageSales.EditSalesModel
@{
    ViewBag.Title = @sharedResource["Edit Selles"];
    ViewBag.pTitle = @sharedResource["Edit Selles"];
    ViewBag.pageTitle = @sharedResource["Salles"];
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Edit Selles"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">

                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />


                        <form method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <input type="text" asp-for="EditSelles.PassportPic" value="@Model.EditSelles.PassportPic" hidden id="PicHiddenId" />
                            <input type="text" asp-for="EditSelles.SalesPassword" value="@Model.EditSelles.SalesPassword" hidden />
                            <input type="text" asp-for="EditSelles.SalesEmail" value="@Model.EditSelles.SalesEmail" hidden />
                            <input type="text" asp-for="EditSelles.SalesId" value="@Model.EditSelles.SalesId" hidden />
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Employee Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover itemImgCla" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="EditSelles.SalesName" class="form-label">@sharedResource["Employee Name"]</label>

                                            <input type="text" asp-for="EditSelles.SalesName" class="form-control" placeholder="@sharedResource["Enter Employee Name"]" required />

                                            <span asp-validation-for="EditSelles.SalesName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="EditSelles.pSalesPhoneNumberh" class="form-label">@sharedResource["Phone Number"]</label>
                                            <input type="text" asp-for="EditSelles.SalesPhoneNumber" class="form-control" placeholder="@sharedResource["Enter Phone Number"]" required />
                                            <span asp-validation-for="EditSelles.SalesPhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label asp-for="EditSelles.EmployeeId" for="car-rental-name">@sharedResource["Employee Name"] <small class="text-danger">*</small></label>

                                        <select data-val="true" data-val-required="@sharedResource["Please choose An Employee"]" id="EmpId" asp-for="EditSelles.EmployeeId" class="form-select required" aria-label="Default select example" required>


                                            @{
                                                if (Model.employees != null)
                                                {
                                                    foreach (var item in Model.employees)

                                                    {
                                                        <option value="@item.EmployeeId">@item.EmployeeName</option>
                                                    }
                                                }
                                            }

                                        </select>

                                        <span asp-validation-for="EditSelles.EmployeeId" class="text-alert"></span>
                                    </div>



                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="EditSelles.IsActive" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="EditSelles.IsActive" class="form-check-label">@sharedResource["Is Active?"]</label>
                                            <span asp-validation-for="EditSelles.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>

                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Edit Selles"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>

    <script>
        window.addEventListener('load', (event) => {
            console.log('page is fully loaded');

            var ProdPic = document.getElementById("PicHiddenId").value;
            document.getElementsByClassName('itemImgCla')[0].src = "/" + ProdPic
        });

              

    </script>

}

