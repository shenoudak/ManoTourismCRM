@page
@model ManoTourism.Areas.Identity.Pages.Account.LoginModel
@using Microsoft.AspNetCore.Localization;
@{
    var locale = Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
    ViewData["Title"] = @sharedResource["Mano Tourism Login"];
    Layout = "";
}


<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>@sharedResource["Login"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="@sharedResource["Mano Tourism"]" name="description">
    <meta content="@sharedResource["Mano Tourism"]" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/public/Img/logo_new.jpg">

    @{
       
        //English
        if (BrowserCulture == "en-US")
        {
            <style>
                html {
                    direction: ltr !important;
                }

                #img {
                    justify-content: end !important;
                }
            </style>


            <link href="@Url.Content("~/Admin/assets/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("~/Admin/assets/css/icons.min.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("~/Admin/assets/css/app.min.css")" rel="stylesheet" type="text/css" />


        }
        //Arabic
        else
        {
            <style>
                html {
                    direction: rtl !important;
                }

                #img {
                    justify-content: end !important;
                }
            </style>
            <link href="@Url.Content("~/Admin/assets/css/bootstrap-rtl.min.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("~/Admin/assets/css/icons.min.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("~/Admin/assets/css/app-rtl.min.css")" rel="stylesheet" type="text/css" />

        }

    }
    <link href="~/Admin/assets/css/custom.css" rel="stylesheet" />

</head>

<body>

    <!-- Loader -->
    <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

   
        

        @if (BrowserCulture == "en-US")
        {
            <div class="accountbg" style="background: url('/public/Img/leftContent.jpg');background-size: cover;background-position: center;"></div>

        }
        else
        {
            <div class="accountbg" style="background: url('/public/Img/rightContent.jpg');background-size: cover;background-position: center;"></div>

        }
   
    <div class="account-pages mt-5 pt-5">
        <div class="container">
            <div class="row" id="img">
                <div class="col-md-8 col-lg-5 col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mt-4">
                                <div class="mb-3">
                                    <a href="index.html"><img src="~/public/Img/logo_new.jpg" style="height: 6rem;width: 11rem;" alt="logo"></a>
                                </div>
                            </div>
                            <div class="p-3">
                                <h4 class="font-size-18 mt-2 text-center">@sharedResource["Welcome Back"] !</h4>
                                <p class="text-muted text-center mb-4"> @sharedResource["Sign In"]</p>
                                <input type="text" class="form-control" asp-for="@Model.ReturnUrl" hidden>

                                <form class="form-horizontal" method="post">

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="mb-3">

                                        <label class="form-label" asp-for="Input.Email">@sharedResource["Email"]</label>
                                        <input type="text" class="form-control" asp-for="Input.Email" id="username" placeholder="@sharedResource["Email"]">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Input.Password">@sharedResource["Password"]</label>
                                        <input type="password" asp-for="Input.Password" class="form-control" id="userpassword" placeholder="@sharedResource["Password"]">
                                    </div>


                                    <div class="row mt-4 text-center">
                                        <div>
                                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">@sharedResource["Sign In"]</button>
                                        </div>
                                    </div>


                                </form>

                            </div>

                        </div>
                    </div>
                    @*   <div class="mt-5 text-center position-relative">
                    <p class="text-black">
                    <script>document.write(new Date().getFullYear())</script> © @sharedResource["Mano Tourism"] <i class="mdi mdi-heart text-danger"></i>
                    </p>
                    </div>*@

                </div>
            </div>
        </div>
    </div>


    <!-- JAVASCRIPT -->
    <script src="~/Admin/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Admin/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Admin/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Admin/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Admin/assets/js/app.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>


